<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="By Samuel.F.Camarinha    turma 1202"
    />
    <EditText
        android:id="@+id/editValor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Digite o Valor"
        android:inputType="number|numberDecimal" />

    <EditText
        android:id="@+id/editTaxa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:hint="Digite a taxa"
        android:inputType="number|numberDecimal" />

    <Button
        android:id="@+id/buttonDOL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Valor em DÃ³lares (USD)" />
    <Button
        android:id="@+id/buttonEUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Valor em Euros (EUR)"/>
    <Button
        android:id="@+id/buttonGBP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Valor em Libras Esterinas (GBP)"/>
    <Button
        android:id="@+id/buttonBITCOIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Valor em BitCoin (Cripto Moeda)"/>

    <TextView
        android:id="@+id/textResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="R$"
        android:textSize="50dp" />

</LinearLayout>